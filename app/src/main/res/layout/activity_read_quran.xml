<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:id="@+id/bg1"
    android:layout_height="match_parent"
    tools:context=".Activities.Read_quran_Activity">
    <ImageView

        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/backarrow"
        android:clickable="true"
        android:id="@+id/back"/>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp"

        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
android:layout_below="@+id/back"
        android:animateLayoutChanges="false"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:id="@+id/bgx"
        android:layout_gravity="bottom"
        android:background="@drawable/corner_bn"
        android:visibility="gone"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/l"
            android:src="@drawable/ic_baseline_search_24"
            android:tint="@color/colorText"/>
        <TextView
            android:layout_centerVertical="true"
            android:hint="Continue from where you left ?"
            android:textColor="@color/colorText"
android:id="@+id/ll"

             android:textColorHint="@color/colorText"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/l"
            />



        <TextView
            android:layout_toRightOf="@+id/ll"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Yes!"
            android:layout_centerVertical="true"
            android:id="@+id/yes"
            android:textColor="@android:color/background_light"
            android:clickable="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/No"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="-19dp"
            android:layout_toRightOf="@+id/yes"
            android:clickable="true"
            android:gravity="center"
            android:text="No!"
            android:textColor="@android:color/background_light" />


    </RelativeLayout>


</FrameLayout>