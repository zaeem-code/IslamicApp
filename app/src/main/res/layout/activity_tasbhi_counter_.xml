<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent" >





    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/backarrow"
        android:clickable="true"
        android:id="@+id/back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/back"
        android:weightSum="4"
        android:layout_marginTop="20dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="21sp"
            android:id="@+id/Text_data"
            android:textColor="@color/colorText"
            android:background="@drawable/corner_white"
            android:textStyle="bold"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black"
            android:layout_weight="1">


            <ImageView
                android:layout_width="150dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:layout_height="150dp"
                android:src="@drawable/tasbeh"/>
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/rc"
                android:layout_alignParentRight="true"
                android:id="@+id/rc"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/tsdbhi_counter"
                    android:layout_marginTop="20dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_below="@+id/tsdbhi_counter"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:id="@+id/tsdbhi_counter2"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <ImageView
                android:layout_marginRight="40dp"
                android:layout_width ="40dp"
                android:id="@+id/fresh"
                android:clickable="true"
                android:layout_height="40dp"
                android:tint="@color/colorText"
                android:layout_below="@id/rc"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tsdbhi_counter2"
                android:src="@drawable/translationicon"
                tools:ignore="NotSibling" />
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/spkr"
                android:layout_toLeftOf="@+id/fresh"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_below="@id/rc"
                android:tint="@color/gold2"
                android:src="@drawable/volume_full_24"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1.6"
            android:id="@+id/Tcount"

            android:background="@drawable/quran_bg">

            <Button
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:textSize="17sp"
                android:text="Click me"
                android:textStyle="bold"
                android:id="@+id/frame"
                android:visibility="invisible"
                android:textColor="@color/colorText"
                android:layout_height="100dp"
                android:background="@drawable/corner_white"/>
        </FrameLayout>
    </LinearLayout>




</RelativeLayout>
