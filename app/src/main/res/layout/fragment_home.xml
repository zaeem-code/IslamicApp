<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/design"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_alignParentTop="true"
                android:id="@+id/admin_lyt"

                android:layout_margin="20dp"
                android:background="@drawable/corner_white"
                android:visibility="gone"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_margin="2dp"
                    android:padding="1dp"

                    android:layout_alignParentTop="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/umrah"
                    android:background="@android:color/transparent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_imageAssetsFolder="images"
                    app:lottie_rawRes="@raw/hajj" />
                <TextView
                    android:layout_below="@+id/umrah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:textSize="16sp"
                    android:padding="3dp"

                    android:elevation="1dp"
                    android:text="Question for umrah tickets will be announced soon :"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:id="@+id/admin_ques"
                    android:background="@drawable/corner_white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:text="Counter"
                    android:visibility="gone"

                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_below="@id/admin_ques"
                    android:id="@+id/counter_admin"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />


                <EditText
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:padding="3dp"
                    android:textSize="15sp"
                    android:hint="Answer"

                    android:elevation="1dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:id="@+id/admin_answer"
                    android:layout_below="@id/counter_admin"
                    android:background="@drawable/corner_white"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />


                <com.airbnb.lottie.LottieAnimationView
                    android:padding="1dp"

                    android:visibility="gone"
                     android:id="@+id/done"
                    android:background="@android:color/transparent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_imageAssetsFolder="images"
                    app:lottie_rawRes="@raw/done"




                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_below="@id/admin_answer"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"

                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/done"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Submitted successfully"
                    android:visibility="gone"


                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:id="@+id/note"
                    android:layout_alignParentLeft="true"

                    android:layout_below="@id/admin_answer"
                    android:layout_marginTop="25dp"
                    android:gravity="center" />

                <Button
                    android:visibility="gone"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/submit_ans"
                    android:layout_below="@id/admin_answer"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Submit"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:background="@drawable/corner_bn_black"
                    android:layout_margin="10dp"
                    android:textColor="@color/gold2"

                    >


                </Button>






            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/signup_lyt"
                android:paddingHorizontal="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:background="@drawable/corner_white"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"
                    android:text="sign up for umrah tickets :"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:id="@+id/signup_text"
                    android:gravity="center" />


                <Button
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/signup_button"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="Sign up"
                    android:textColor="@color/gold2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/corner_bn_black"/>



            </RelativeLayout>



        </RelativeLayout>



















        <RelativeLayout
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/design"
            android:layout_marginTop="15dp"
            android:minHeight="100dp"
            android:background="@drawable/corner_bn_green"
            android:id="@+id/ayatoftheday_lyt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/ayatoftheday_title"
                android:layout_marginTop="15dp"
                android:text="Ayat of the day"
                android:textColor="@color/gold2"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ayatoftheday_title"

                android:gravity="top|center"
                android:textSize="17sp"
                android:id="@+id/ayatoftheday_txt"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/gold2"
                android:textStyle="bold" />


        </RelativeLayout>









        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"

            android:layout_below="@+id/ayatoftheday_lyt"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/corner_bn_black"
            android:id="@+id/itla_e_mehfil_lyt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="27sp"
                android:id="@+id/itla_e_mehfil_title"
                android:text="Itlaa-e-Mahfil"
                android:textColor="@color/gold2"
                android:textStyle="bold"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itla_e_mehfil_title"
             android:layout_marginVertical="10dp"
                android:textSize="17sp"
                android:layout_marginHorizontal="5dp"

                android:id="@+id/itla_e_mehfil_text"
                android:textColor="@color/gold2"
                android:textStyle="bold"
                android:visibility="visible"
                android:gravity="top|center" />


        </RelativeLayout>



        <RelativeLayout
            android:visibility="visible"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itla_e_mehfil_lyt"
            android:layout_marginTop="17dp"
            android:minHeight="100dp"
            android:background="@drawable/corner_bn_green"
            android:id="@+id/hadeesoftheday_lyt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/hadeesoftheday_title"
                android:layout_marginTop="15dp"
                android:text="Hadees of the day"
                android:textColor="@color/gold2"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hadeesoftheday_title"
                android:textSize="17sp"
                android:gravity="top|center"
                android:id="@+id/hadeesoftheday_text"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="5dp"
                 android:textColor="@color/gold2"
                android:textStyle="bold"
                />



        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_below="@+id/hadeesoftheday_lyt"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/corner_bn_black"
            android:id="@+id/wazifa_lyt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/wazifa_title"

                android:text="Wazifa of the day"
                android:textColor="@color/gold2"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/wazifa_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wazifa_title"
            android:layout_marginVertical="17dp"
                android:gravity="top|center"

                android:layout_marginHorizontal="5dp"
                android:textColor="@color/gold2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>



        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_below="@+id/wazifa_lyt"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/corner_bn_green"
            android:id="@+id/eventoftheday_lyt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/eventoftheday_title"

                android:text="Event of the day"
                android:textColor="@color/gold2"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/eventoftheday_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventoftheday_title"
                android:layout_marginVertical="15dp"
                android:gravity="top|center"

                android:layout_marginHorizontal="5dp"
                android:textColor="@color/gold2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>




        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_below="@+id/eventoftheday_lyt"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/corner_bn_black"
            android:id="@+id/islamicdate_lyt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/islamicdate_title"
                android:layout_centerHorizontal="true"

                android:text="Islamic Date"
                android:textColor="@color/gold2"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/islamicdate_text"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@+id/islamicdate_title"
                android:layout_marginTop="3dp"
                android:gravity="top|center"
                android:paddingBottom="2dp"
                android:text="DD/MM/YYYY"
                android:textColor="@color/gold2"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/calander_img"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/islamicdate_title"
                android:layout_alignParentLeft="true"
                android:src="@drawable/calendar"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/islamicdate_text"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                android:textSize="17sp"
                android:layout_marginVertical="5dp"
                android:id="@+id/admin_calander"
                android:textColor="@color/gold2"
                android:textStyle="bold"
                />

        </RelativeLayout>




<RelativeLayout
    android:layout_below="@+id/islamicdate_lyt"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"

    android:background="@android:color/transparent"
    android:layout_height="wrap_content" />




    </RelativeLayout>


</androidx.core.widget.NestedScrollView>