<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent"

    tools:context=".Activities.SignupActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    tools:context=".Activities.SignupActivity">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/backarrow"
        android:clickable="true"
        android:id="@+id/back"/>
    <ImageView
        android:layout_width="150dp"
        android:id="@+id/titlelogo"
        android:layout_height="150dp"
        android:src="@drawable/kalmachannellogo"
        android:layout_centerHorizontal="true"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="35sp"
    android:id="@+id/crtact"
    android:text="Create\nyour account"
        android:textAlignment="center"
        android:layout_below="@id/titlelogo"
    android:textColor="@color/colorText"
        android:layout_marginHorizontal="50dp"
    android:textStyle="bold"
    android:gravity="left|top"
        tools:ignore="RtlCompat" />


    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Your Name"
        android:textColorHint="@color/colorText"
        android:layout_below="@+id/crtact"
        android:textColor="@color/colorText"
        android:id="@+id/name"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Phone no."
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:layout_below="@+id/name"
        android:id="@+id/phone"
        android:inputType="phone"
        android:layout_marginHorizontal="50dp"
        android:maxEms="13"
        android:minEms="11"
        android:backgroundTint="@android:color/white"

        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="City"
        android:textColorHint="@color/colorText"
        android:layout_below="@+id/phone"
        android:id="@+id/city"
        android:inputType="text"
        android:textColor="@color/colorText"
        android:layout_marginHorizontal="50dp"
        android:maxEms="15"
        android:minEms="6"
        android:backgroundTint="@android:color/white"/>


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_marginTop="5dp"
        android:layout_below="@id/city"
        android:layout_marginLeft="50dp"
        android:layout_width="35dp"
        android:backgroundTint="@color/colorText"
        android:layout_height="35dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:id="@+id/terms"
        android:text=" By signing up, you agree to the Terms of our service and privacy policy"
        android:layout_below="@id/city"
        android:layout_toRightOf="@+id/checkBox"
        android:textColor="@android:color/white"
        android:layout_marginRight="50dp"
        android:textStyle="bold"
        android:gravity="left|top" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="90dp"
        android:id="@+id/signup_button"
        android:layout_centerVertical="true"
        android:textSize="25sp"
        android:text="Sign up"
        android:textColor="@color/colorGreen"
        android:layout_below="@id/terms"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/corner_my"

        />



</RelativeLayout>
</androidx.core.widget.NestedScrollView>